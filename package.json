{
  "name": "remark-embed-images-sync",
  "version": "0.1.0",
  "description": "",
  "type": "module",
  "module": "build/module/index.js",
  "typings": "build/main/index.d.js",
  "main": "build/main/index.js",
  "scripts": {
    "build": "run-p build:*",
    "build:module": "tsc -p tsconfig.json",
    "build:main": "tsc -p tsconfig.commonjs.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"{src,test}/**/*.ts\" --write",
    "fix:lint": "xo \"{src,test}/**/*.ts\" --fix",
    "test": "run-s build test:*",
    "test:lint": "xo \"{src,test}/**/*.ts\"",
    "test:prettier": "prettier \"{src,test}/**/*.ts\" --list-different",
    "test:spelling": "cspell \"{README.md,.github/*.md,src/**/*.ts,test/**/*.ts}\"",
    "test:unit": "nyc --silent ava",
    "watch:build": "tsc -p tsconfig.json -w",
    "watch:test": "nyc --silent ava --watch",
    "version": "standard-version",
    "reset-hard": "git clean -dfx && git reset --hard && pnpm i",
    "prepare-release": "run-s reset-hard test version"
  },
  "engines": {
    "node": ">=14"
  },
  "keywords": [
    "unified",
    "remark",
    "remark-plugin",
    "plugin",
    "mdast",
    "markdown",
    "embed",
    "inline"
  ],
  "author": "Andrzej Lichnerowicz <andrzej@lichnerowicz.pl> (https://andrzej.lichnerowicz.pl)",
  "license": "CC0-1.0",
  "repository": "unjello/remark-embed-images-sync",
  "bugs": "https://github.com/unjello/remark-embed-images-sync/issues",
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/node": "^18.11.18",
    "ava": "^5.1.1",
    "cspell": "^6.19.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.8.3",
    "remark": "^14.0.2",
    "remark-embed-frontmatter": "^0.1.3",
    "remark-html": "^15.0.1",
    "rimraf": "^4.1.2",
    "standard-version": "^9.5.0",
    "to-vfile": "^7.2.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "xo": "^0.53.1"
  },
  "dependencies": {
    "@types/mdast": "^3.0.10",
    "@types/mime": "^3.0.1",
    "is-relative-url": "^4.0.0",
    "mime": "^3.0.0",
    "unified": "^10.1.2",
    "unist-util-visit": "^4.1.2"
  },
  "files": [
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "!**/*.json",
    "LICENSE",
    "README.md"
  ],
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--experimental-specifier-resolution=node"
    ],
    "files": [
      "test/**/*.spec.ts"
    ],
    "verbose": true
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "**/*.spec.js"
    ]
  }
}
